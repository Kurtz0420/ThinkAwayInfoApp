<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">


    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        app:cardElevation="5dp"

        app:cardCornerRadius="4dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_testthree"
            android:id="@+id/right_image_cat_psych"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"


        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_testthree"
            android:scaleType="centerCrop"

            android:id="@+id/left_image_cat_psych"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"

        android:id="@+id/card_on_top">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_testthree"
            android:scaleType="centerCrop"
            android:id="@+id/top_image_cat_psych"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_on_top"
        android:text="Moody"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/allerta"
        android:id="@+id/title_cat_psych"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_cat_psych"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, s"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/allerta"
        android:textStyle="bold"
        android:id="@+id/description_cat_psych"


        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/SubtleBlack"
        android:layout_below="@id/description_cat_psych"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        />



</RelativeLayout>