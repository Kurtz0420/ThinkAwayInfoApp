<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/whole_card"
    android:layout_height="wrap_content"
    android:padding="20dp">


    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        app:cardElevation="5dp"

        app:cardCornerRadius="4dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_testthree"
            android:id="@+id/right_image_cat"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"


        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_testthree"
            android:scaleType="centerCrop"

            android:id="@+id/left_image_cat"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"

        android:id="@+id/card_on_top">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_testthree"
            android:scaleType="centerCrop"

            android:id="@+id/top_image_cat"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_on_top"
        android:text="Moody"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:fontFamily="@font/allerta"
        android:id="@+id/title_cat"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_cat"
        android:text="214 Photos"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:textSize="13sp"
        android:id="@+id/photos_count_cat"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/photos_count_cat"
        android:text="ipwqeufhnqwpieurhtvc2908y75821943075y30498tyhiowerutyhwevrioutywieruntyviweurntyweiovrtyweriowieurntyvioewtyieowurynteiowvtyeiwtyiowertyvwierty"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:textSize="13sp"
        android:textColor="@color/SubtleBlack"
        android:id="@+id/description_cat_unsplash"

        />
</RelativeLayout>