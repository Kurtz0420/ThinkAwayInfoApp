<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/likes_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_likes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/likes_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text=": 13"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/likes_image"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/likes_image"
        app:layout_constraintTop_toTopOf="@+id/likes_image"
        tools:layout_editor_absoluteX="48dp" />

    <ImageView
        android:id="@+id/downloads_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_downloads"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/likes_image" />

    <TextView
        android:id="@+id/downloads_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text=": 13"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/downloads_image"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/downloads_image"
        app:layout_constraintTop_toTopOf="@+id/downloads_image"
        tools:layout_editor_absoluteX="48dp" />

    <ImageView
        android:id="@+id/dimen_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_dimen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/downloads_image" />

    <TextView
        android:id="@+id/width_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text=": 1322 x 1235"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/dimen_image"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/dimen_image"
        app:layout_constraintTop_toTopOf="@+id/dimen_image"
        tools:layout_editor_absoluteX="47dp" />

</androidx.constraintlayout.widget.ConstraintLayout>