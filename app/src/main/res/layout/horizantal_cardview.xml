<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/horizantal_cardview_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RecyclerView No"
            android:id="@+id/recyclerview_textview"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:layout_below="@id/recyclerview_textview"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:id="@+id/horizantal_recyclerView"></androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>




</RelativeLayout>