<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/reads_iv"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_reads"
                android:gravity="center"
                android:text="reads"
                android:fontFamily="@font/trebuc"
                app:layout_constraintEnd_toEndOf="@+id/reads_tv"
                app:layout_constraintStart_toStartOf="@+id/reads_tv"
                app:layout_constraintTop_toBottomOf="@+id/reads_tv" />

            <TextView
                android:id="@+id/reads_tv"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25sp"
                android:fontFamily="@font/trebuc"

                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            >

            <TextView
                android:id="@+id/saves_tv"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="25sp"
                android:gravity="center"
                android:fontFamily="@font/trebuc"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/saves_iv"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_saves"
                android:text="likes"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:fontFamily="@font/trebuc"

                app:layout_constraintEnd_toEndOf="@+id/saves_tv"
                app:layout_constraintStart_toStartOf="@+id/saves_tv"
                app:layout_constraintTop_toBottomOf="@+id/saves_tv" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/share_iv"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_shares"
                android:text="shares"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:fontFamily="@font/trebuc"

                app:layout_constraintEnd_toEndOf="@+id/share_tv"
                app:layout_constraintStart_toStartOf="@+id/share_tv"
                app:layout_constraintTop_toBottomOf="@+id/share_tv" />




            <TextView
                android:id="@+id/share_tv"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="25sp"
                android:gravity="center"
                android:fontFamily="@font/trebuc"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>






</LinearLayout>