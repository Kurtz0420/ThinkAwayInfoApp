<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="4dp"
    android:layout_margin="15dp"

    >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >



        <ImageView
            android:layout_height="160dp"
            android:layout_width="match_parent"
            android:id="@+id/cc_iv"
            android:scaleType="centerCrop"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:text="Here a few lines about the author HereHere a few lines about the author HereHere a few lines about the author HereHere a few lines about the author Here a few lines about the author"
            android:textSize="12sp"
            android:fontFamily="@font/trebuc"
            android:layout_marginTop="5dp"
            android:id="@+id/authorinfo_cc"
            android:layout_below="@id/title_cc"
            android:layout_marginEnd="17dp"

            />

        <ImageView
            android:id="@+id/author_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="-45dp"
            android:layout_below="@id/cc_iv"
            android:layout_marginStart="15dp"
 />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Why Do We Do What We Do"
            android:textSize="28sp"
            android:id="@+id/title_cc"
            android:textColor="@color/SubtleBlack"
            android:layout_below="@id/author_image"
            android:layout_marginTop="6dp"
            android:layout_marginStart="15dp"

            android:fontFamily="@font/trebuc"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>